# =============================================================================
# Application Configuration
# =============================================================================
# All settings can be configured via environment variables.
# See backend/config.py for the full settings schema.

# -----------------------------------------------------------------------------
# General Application Settings
# -----------------------------------------------------------------------------
# Set to true for additional debug logging
# WARNING: Set to false or remove in production!
DEBUG=false

# -----------------------------------------------------------------------------
# Database Configuration (PostgreSQL)
# -----------------------------------------------------------------------------
# Use Docker hostname for containerized deployment
# For local development: postgresql://chatbot_user:chatbot_password@localhost:5432/chatbot
DATABASE_URL=postgresql://chatbot_user:chatbot_password@postgres:5432/chatbot

# -----------------------------------------------------------------------------
# Redis Configuration
# -----------------------------------------------------------------------------
# Use Docker hostname for containerized deployment
# For local development: redis://localhost:6379/0
REDIS_URL=redis://redis:6379/0

# -----------------------------------------------------------------------------
# JWT Authentication Configuration
# -----------------------------------------------------------------------------
# Secret key for signing JWT tokens (generate a secure random string)
# Example: python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET_KEY=""
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440
REFRESH_TOKEN_EXPIRE_DAYS=7

# -----------------------------------------------------------------------------
# LinkedIn OAuth Configuration
# -----------------------------------------------------------------------------
LINKEDIN_CLIENT_ID=""
LINKEDIN_CLIENT_SECRET=""

# -----------------------------------------------------------------------------
# OpenAI API Configuration
# -----------------------------------------------------------------------------
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=""
# Options: gpt-4o, gpt-4o-mini (recommended for dev), gpt-4-turbo, gpt-3.5-turbo
OPENAI_MODEL=gpt-4o-mini
# Embedding model for vector search
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# -----------------------------------------------------------------------------
# Google Custom Search API Configuration
# -----------------------------------------------------------------------------
# Used by content agents for research and article creation
# Get API key from: https://console.cloud.google.com/apis/credentials
# Create Custom Search Engine at: https://programmablesearchengine.google.com/
GOOGLE_API_KEY=""
GOOGLE_SEARCH_ENGINE_ID=""

# -----------------------------------------------------------------------------
# ChromaDB Vector Database Configuration
# -----------------------------------------------------------------------------
# Use Docker hostname for containerized deployment
# For local development: localhost and 8001
CHROMA_HOST=chroma
CHROMA_PORT=8000
CHROMA_COLLECTION_NAME=research_articles

# -----------------------------------------------------------------------------
# Agent System Configuration
# -----------------------------------------------------------------------------
# Agent build version to use (v1, v2, etc.)
AGENT_BUILD=v2

# Intent Classifier Settings
# Set to false to use rule-based classification instead of LLM
INTENT_CLASSIFIER_USE_LLM=true
# Model for intent classification (defaults to OPENAI_MODEL if not set)
# INTENT_CLASSIFIER_MODEL=gpt-4o-mini
# Temperature for intent classifier (lower = more deterministic)
INTENT_CLASSIFIER_TEMPERATURE=0.1

# -----------------------------------------------------------------------------
# Storage Configuration
# -----------------------------------------------------------------------------
# Local directory for file uploads
UPLOAD_DIR=/app/uploads

# Base URL for resource links in published articles
API_BASE_URL=http://localhost:8000

# S3 Configuration (optional - for cloud storage)
# S3_BUCKET=
# AWS_REGION=eu-central-1

# -----------------------------------------------------------------------------
# CORS Configuration
# -----------------------------------------------------------------------------
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# -----------------------------------------------------------------------------
# LangSmith Observability (Optional)
# -----------------------------------------------------------------------------
# Get your API key from https://smith.langchain.com/settings (US)
# or https://eu.smith.langchain.com/settings (EU)
# LANGCHAIN_TRACING_V2=true
# LANGCHAIN_API_KEY=""
# LANGCHAIN_PROJECT=chatbot-multiagent
# LANGCHAIN_ENDPOINT=https://api.smith.langchain.com

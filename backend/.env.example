# LinkedIn OAuth Configuration
LINKEDIN_CLIENT_ID=""
LINKEDIN_CLIENT_SECRET=""

# OpenAI ChatGPT API Configuration
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=""
# Options: gpt-4o, gpt-4o-mini (recommended), gpt-4-turbo, gpt-3.5-turbo
OPENAI_MODEL=gpt-4o-mini

# Google Custom Search API Configuration
# Used by content agents for research and article creation
# Get API key from: https://console.cloud.google.com/apis/credentials
# Create Custom Search Engine at: https://programmablesearchengine.google.com/
GOOGLE_API_KEY=""
GOOGLE_SEARCH_ENGINE_ID=""

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Database Configuration (PostgreSQL)
DATABASE_URL=postgresql://chatbot_user:chatbot_password@localhost:5432/chatbot

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# ChromaDB Vector Database Configuration
CHROMA_HOST=localhost
CHROMA_PORT=8001

# JWT Authentication Configuration
# Secret key for signing JWT tokens (generate a secure random string)
# Example: python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET_KEY=""
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440
REFRESH_TOKEN_EXPIRE_DAYS=7

# Base URL for resource links in published articles
API_BASE_URL=http://localhost:8000

# LangSmith Observability (Optional)
# Get your API key from https://smith.langchain.com/settings (US) or https://eu.smith.langchain.com/settings (EU)
